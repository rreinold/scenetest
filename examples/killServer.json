{
    "name": "Name of this test run",
    "scenarios": [ ["Bloated Pig", 20], ["Cleaning Lady", 1] ],
    "sequencing": "Parallel",
    "globals": {"RemainingPigs":0},
    "Bloated Pig": {
        "name": "Makin' the Bacon",
        "steps": [
            ["setUser", "foo@bar.com"],
            ["incrGlobal", "RemainingPigs"],
            ["sync", "We're Ready", 21],
            ["repeat", 10000, [
                ["createItem", "DuhCollection", {"name":"Fred","address":"Homeless"}],
                ["call", "example", {}] ]
            ],
            ["decrGlobal", "RemainingPigs"]
        ]
    },
    "Cleaning Lady": {
        "name": "Keep the db from getting too big",
        "steps": [
            ["setUser", "swm@clearblade.com"],
            ["sync", "We're Ready", 21],
            ["while", "RemainingPigs", "!=", 0, [
                ["sleep", 200],
                ["deleteAllItems", "DuhCollection"]]
            ]
        ]
    }
}
