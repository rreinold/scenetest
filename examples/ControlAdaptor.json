{
    "name": "Create and Delete Items",
    "scenarios": [ ["Create an adaptor", 1] ],
    "sequencing": "Parallel",
    "locals": {
        "adaptorMeta": {
            "architecture": "Art Deco",
            "os": "wizard of...",
            "path_name": "hw.tar.gz",
            "deploy_command": "tar zxvf hw.tar.gz",
            "start_command": "foo.sh",
            "stop_command": "foo.sh"
        },
        "deploySpec": {
            "SooperFile": ["Cutting Edge", "Double-Edged Sword"]
        },
        "controlSpec": {
            "SooperFile": {
                "edgeSpec": ["Cutting Edge", "Double-Edged Sword"],
                "command": "start"
            }
        }
    },
    "Create an adaptor": [
        ["ignore", ["deleteAdaptorFile", "mySuperAdaptor", "SooperFile"]],
        ["ignore", ["deleteAdaptor", "mySuperAdaptor"]],
        ["createAdaptor", "mySuperAdaptor", {"description": "fuzzle muzzle", "protocol": "greek"}],
        ["createAdaptorFile", "mySuperAdaptor", "SooperFile", "@hw.tar.gz", "@adaptorMeta"],
        ["deployAdaptor", "mySuperAdaptor", "@deploySpec"],
        ["controlAdaptor", "mySuperAdaptor", "@controlSpec"]
    ]
}
