{
    // All we're doing here is calling a service and printing
    // the result. Very simple but powerful when testing in 
    // a cluster configured in several ways
    "name": "Muck with code",
    "scenarios": [ ["Caller", 50] ],
    "sequencing": "Parallel",
    "Caller": {
        "name": "Just callin' some code",
        "steps": [
            ["setUser", "foo@bar.com"],
            ["repeat", 50, [
                ["call", "handlePublish", {}],
                ["print", "@returnValue"] ]
            ]
        ]
    }
}
